<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenTravel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
<!--        <item name="colorPrimary">@color/purple_200</item>-->
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tvMemberList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c_4b525b_100</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AccountMainListItemTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/account_listitem_textsize</item>
        <item name="android:layout_marginTop">@dimen/account_listitem_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/account_listitem_start_margin</item>
    </style>

    <style name="AccountMainListItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/account_listitem_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/account_listitem_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/account_listitem_end_margin</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="Fragment_Title_TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/fragment_account_title_top_margin</item>
        <item name="android:textSize">@dimen/fragment_account_title_textsize</item>
    </style>

    <style name="Fragment_Account" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/fragment_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/fragment_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/fragment_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/fragment_vertical_padding</item>
        <item name="android:background">@drawable/background_gradient_main</item>
    </style>

    <style name="tvMemberText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c_b21b25_100</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="progressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium" parent="Base.TextAppearance.AppCompat.Medium"/>

    <string-array name="choose_images_from">
        <item>相機</item>
        <item>相簿</item>
    </string-array>
</resources>